<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Cambio para crear la tabla 'roles' -->
    <changeSet id="1" author="juan">
        <createTable tableName="barber_shop_shedules">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="day_of_week" type="int">
                <constraints  nullable="false"/>
            </column>
            <column name="is_open" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <column name="open" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="close" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="barber_shop_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="barber_shop_shedules" baseColumnNames="barber_shop_id" constraintName="barber_shop_id_fk" referencedTableName="barber_shops"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>