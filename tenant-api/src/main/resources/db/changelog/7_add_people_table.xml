<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Cambio para crear la tabla 'roles' -->
    <changeSet id="1" author="juan">
        <createTable tableName="people">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="second_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column name="second_last_name" type="varchar(255)">
                <constraints  nullable="true"/>
            </column>
            <column name="cc" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="phone_numbers" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>