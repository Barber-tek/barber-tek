<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Cambio para crear la tabla 'roles' -->
    <changeSet id="1" author="juan">
        <createTable tableName="barber_shops">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="city_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="barber_shops" baseColumnNames="city_id" constraintName="city_id_fk" referencedTableName="cities"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>